        <activity
            android:name=".activity.local.PlayFinish"
            android:configChanges="orientation|keyboardHidden|screenSize|fontScale"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden|adjustPan" />
